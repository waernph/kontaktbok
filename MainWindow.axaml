<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:kontaktbok"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="kontaktbok.MainWindow"
        x:DataType="local:MainWindow"
        Title="kontaktbok">
    <DockPanel>
        <ListBox x:Name="ContactsList" ItemsSource="{Binding Contacts}" SelectedItem="{Binding SelectedContact}">
            <ListBox.ItemTemplate>
                <DataTemplate x:DataType="local:Contact">
                    <StackPanel Orientation="Horizontal">
                        <StackPanel>
                            <TextBlock Text="{Binding Name}"/>
                            <StackPanel IsVisible="{Binding $parent[ListBoxItem].IsSelected}">
                                <TextBlock Text="{Binding Adress}"/>
                                <TextBlock Text="{Binding ZipCode}"/>
                                <TextBlock Text="{Binding City}"/>
                                <TextBlock Text="{Binding Phone}"/>
                                <TextBlock Text="{Binding EMail}"/>
                                
                            </StackPanel>
                        </StackPanel>
                        <StackPanel IsVisible="{Binding $parent[ListBoxItem].IsSelected}">
                            <Button Content="Delete"/>
                        </StackPanel>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <StackPanel DataContext="{Binding SelectedContact}">
            <TextBox Text="{Binding Name, Mode=TwoWay}"/>
            <TextBox Text="{Binding Adress, Mode=TwoWay}"/>
            <TextBox Text="{Binding ZipCode, Mode=TwoWay}"/>
            <TextBox Text="{Binding City, Mode=TwoWay}"/>
            <TextBox Text="{Binding Phone, Mode=TwoWay}"/>
            <TextBox Text="{Binding EMail, Mode=TwoWay}"/>
        </StackPanel>
    </DockPanel>
</Window>